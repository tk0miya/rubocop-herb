#!/usr/bin/env ruby
# frozen_string_literal: true

require "bundler/setup"
require "rubocop/herb"
require "optparse"

options = { html_visualization: false }
OptionParser.new do |opts|
  opts.banner = "Usage: #{$PROGRAM_NAME} [options] < file.erb"

  opts.on("--html-visualization", "Enable HTML visualization") do
    options[:html_visualization] = true
  end

  opts.on("-h", "--help", "Show this help message") do
    puts opts
    exit
  end
end.parse!

source = $stdin.read
result = RuboCop::Herb::Converter.new(html_visualization: options[:html_visualization]).convert(source)

if result.nil?
  warn "Error: Failed to parse ERB"
  exit 1
end

puts result
